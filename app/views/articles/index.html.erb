<h1>Index</h1>

<%= link_to "Ajoute un article !", new_article_path %>

  <div class="search">
      <%= form_tag articles_path, method: :get, class: "form-inline" do %>
        <div class="input-group">
          <div class="input-group-append">
            <%= button_tag type: 'submit', class: "btn btn-search" do %>
              <i class="fa-solid fa-magnifying-glass"></i>
            <% end %>
          </div>
          <%= text_field_tag :keyword, params[:keyword], class: "form-control search", placeholder: "Rechercher un Article !" %>
        </div>
      <% end %>
  </div>

<% @articles.each do |article| %>
  <%= link_to article_path(article) do%>
    <div>
      <h3 class="taille-titre"><%= article.name %></h3>
      <b><%= article.price %>â‚¬</b>
      <p><%= article.size %></p>
      <p><%= article.brand %></p>
      <%# favoris %>
    <div>
  <% end %>
<% end %>
